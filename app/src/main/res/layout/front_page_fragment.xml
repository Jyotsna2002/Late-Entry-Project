<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/border"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:background="@drawable/time_border"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-22dp"
                    android:background="@color/white"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:text="Today is 11 Apr 2022"
                    android:textColor="#41D3BD"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/border"
                    app:layout_constraintEnd_toEndOf="@+id/border"
                    app:layout_constraintStart_toStartOf="@+id/border" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:paddingTop="11dp"
                    android:text="8:30"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textColor="#41D3BD"
                    android:textSize="61.64sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="Late entry starts 8:40 am"
                    android:textColor="#41D3BD"
                    android:textSize="18sp"
                    android:fontFamily="@font/source_sans_pro"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <android.widget.Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/button_curve"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:elevation="7dp"
                android:stateListAnimator="@null"
                android:textColor="#383D3B"
                android:paddingStart="28dp"
                android:textSize="28sp"
                android:text="@string/scan_barcode_to_register_a_late_entry"
                android:clickable="true"
                android:enabled="true"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="@font/source_sans_pro_bold"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                android:focusable="true" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/button">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/RollNo"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="28dp"
                    app:boxCornerRadiusBottomEnd="9dp"
                    app:boxCornerRadiusBottomStart="9dp"
                    app:boxCornerRadiusTopEnd="9dp"
                    app:boxCornerRadiusTopStart="9dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirm_password_edit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_border"
                        android:hint="Enter Student no."
                        android:drawableEnd="@drawable/ic_edit"
                        android:fontFamily="@font/source_sans_pro"
                        android:inputType="number"
                        android:lines="1"
                        android:textColorHint="#7C7C7C"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="-7dp"
                    android:background="@color/white"
                    android:paddingStart="8dp"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:paddingEnd="8dp"
                    android:text="Manual Entry"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/RollNo"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="58dp"
                android:background="#F4F4F4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="22dp"
                    android:text="Guidelines"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="28dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="@string/guidelines"
                    android:textColor="#7C7C7C"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>